              "properties": {
                "field": {
                  "type": "object",
                  "properties": {
                    "bucket_id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "label": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "enum": [
                        "string",
